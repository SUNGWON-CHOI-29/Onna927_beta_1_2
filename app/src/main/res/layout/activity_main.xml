<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"/>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:importantForAccessibility="no"
        android:id="@+id/drawer_content">
        <com.fivehundredpx.android.blur.BlurringView
            android:id="@+id/blurring_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            app:blurRadius="15"
            app:downsampleFactor="8"
            app:overlayColor="#00ffffff"/>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:text="닉네임"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="@color/bg_line"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 편집"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신 리뷰 피드"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="135dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가고싶다 리스트"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btEditProfile"
            android:layout_marginTop="90dp"
            android:background="@color/bg_button"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btFeed"
            android:layout_marginTop="135dp"
            android:background="@color/bg_button"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btWish"
            android:layout_marginTop="180dp"
            android:background="@color/bg_button"/>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_set_sensor">
            <SeekBar
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:id="@+id/seekBar"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:progressTint="@color/red"
                android:max="10"
                android:progress="5"
                android:thumbTint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="16dp"
                android:text="shake 민감도 설정"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>

