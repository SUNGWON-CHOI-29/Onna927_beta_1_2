<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/fitler_one_bg"
            android:src="@drawable/filter_one_bg"/>
        <ImageView
            android:layout_width="264dp"
            android:layout_height="28dp"
            android:id="@+id/place_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/filter_one_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="117dp"
            android:layout_height="173dp"
            android:id="@+id/place_icon"
            android:layout_below="@+id/place_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/filter_one_icon"
            android:layout_marginTop="45dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fitler_one_bg"
        android:orientation="horizontal"
        android:id="@+id/button_set">
        <ImageButton
            android:layout_width="73dp"
            android:layout_height="19dp"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/bid_1_detail_04_off"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:layout_width="73dp"
            android:layout_height="19dp"
            android:id="@+id/button4"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/bid_1_detail_05_off"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="73dp"
            android:layout_height="19dp"
            android:id="@+id/button5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/bid_1_detail_06_off"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="73dp"
            android:layout_height="19dp"
            android:id="@+id/button6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/bid_1_detail_07_off"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:layout_width="94dp"
        android:layout_height="10dp"
        android:id="@+id/notice"
        android:layout_below="@id/button_set"
        android:src="@drawable/bid_1_detail_08"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />
        <ImageButton
            android:layout_width="73dp"
            android:layout_height="19dp"
            android:id="@+id/button7"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/bid_1_detail_09"
            android:layout_below="@id/notice"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/filter_one_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/place_content"
        android:layout_alignLeft="@id/place_content"
        android:layout_alignRight="@id/place_content"
        android:layout_alignTop="@id/place_content"
        android:gravity="center"

        android:paddingLeft="60dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />
</RelativeLayout>