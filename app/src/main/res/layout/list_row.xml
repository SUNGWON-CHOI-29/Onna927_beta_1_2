<?xml version="1.0" encoding="utf-8"?>
<com.beta.watsonz.onna927_beta_1.helper.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:watsonz="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent" watsonz:checkable="@+id/radio">
    <RelativeLayout
        android:layout_width="322dp"
        android:layout_height="124dp"
        android:background="@drawable/auction_list_bg">
            <TextView android:id="@+id/guide_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="장소"
                android:textColor="@color/red"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView android:id="@+id/guide_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/guide_place"
                android:text="인원"
                android:textColor="@color/red"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>
            <TextView android:id="@+id/guide_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/guide_people"
                android:text="메뉴"
                android:textColor="@color/red"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>
            <TextView android:id="@+id/guide_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/guide_menu"
                android:text="일시"
                android:textColor="@color/red"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"/>

            <TextView android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>
                <TextView android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_place"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"/>
            <TextView android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_people"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"/>
            <TextView android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_menu"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"/>
    </RelativeLayout>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="52dp"
            android:layout_marginRight="5dp"
            android:focusable="false" android:clickable="false"
            android:id="@+id/radio"/>
</com.beta.watsonz.onna927_beta_1.helper.CheckableRelativeLayout>